<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPartidoItem"
            android:layout_width="100dp"
            android:layout_height="100dp"

            app:srcCompat="@mipmap/ic_launcher" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="30dp">

            <TextView
                android:id="@+id/tvNombreItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="nombre falso"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvDireccionItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="cale falsa 123"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tvTipoItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="futbolito"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tvCantidadItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="cantidad" />
            <TextView
                android:id="@+id/tvImgItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/tvTelefonoItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/tvWebItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>